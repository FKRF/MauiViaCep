<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiViaCep.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                x:Name="consultaLbl"
                FontSize="32"
                HorizontalOptions="Center" />
            <Entry
                x:Name="cepEntry"
                Placeholder="Digite o CEP"
                Keyboard="Numeric"
                />
            <Label
                x:Name="resultadoLbl"
                 />
            
            <Button
                Text="Consultar" 
                Clicked="OnConsultarClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
